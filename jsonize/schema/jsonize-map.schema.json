{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://eurocontrol.int/swim/jsonize/jsonize-map.schema.json",
  "title": "Jsonize Map",
  "description": "A jsonize map to convert XML documents into JSON.",
  "type": "array",
  "definitions": {
    "JSONNode": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "string",
            "integer",
            "number",
            "array",
            "object",
            "boolean",
            "null"
          ]
        }
      },
      "required": [
        "path",
        "type"
      ]
    },
    "XMLNode": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "value",
            "sequence",
            "attribute",
            "complexType"
          ]
        }
      }
    },
    "NodeMap": {
      "type": "object",
      "properties": {
        "from": {
          "$ref": "#/definitions/XMLNode"
        },
        "to": {
          "$ref": "#/definitions/JSONNode"
        },
        "itemMappings": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NodeMap"
          }
        },
        "transformation": {
          "type": "string"
        }
      },
      "required": [
        "from",
        "to"
      ]
    }
  },
  "items": {
    "$ref": "#/definitions/NodeMap"
  }
}